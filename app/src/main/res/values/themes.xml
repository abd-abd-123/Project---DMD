<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark Mode Theme -->
    <style name="Theme.AttemptDMD.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Use your brand colors (can be the same or darker variants) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Typical dark background -->
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

    <!-- Light Mode Theme -->
    <style name="Theme.AttemptDMD.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Typical light background -->
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

</resources>
